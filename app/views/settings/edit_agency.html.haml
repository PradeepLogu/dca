%ul.breadcrumb
  %li
    = link_to root_path, class: 'glyphicons home' do
      %i
      = t('settings.edit_agency.home')
  %li.divider
  %li= link_to t('settings.edit_agency.settings'), settings_path
.innerLR
  .row-fluid
    .span12
      %h3.heading-mosaic
        = t('settings.edit_agency.settings_edit_agency', name: @certification_agency.name)
= simple_nested_form_for @certification_agency, url: update_agency_settings_path,
                                            html: { method: :put }, validate: true do |f|
  = f.error_messages
  .innerLR
    .row-fluid
      .span12
        .row-fluid
          .span2
            %label= t('settings.edit_agency.t_course_name')
          .span2
            %label= t('settings.edit_agency.t_course_price')
          .span1
            %label= t('settings.edit_agency.t_course_tax')
          .span2
            %label= t('settings.edit_agency.t_materials_price')
          .span2
            %label= t('settings.edit_agency.t_materials_tax')
          .span1
            %label= t('settings.edit_agency.t_commission')
          .span1
            %label= t('settings.edit_agency.t_total')
          .span1
            %label= t('settings.edit_agency.t_action')
        = f.simple_fields_for :certification_levels, @certification_levels do |build|
          = render 'certification_level_fields', f: build
    = f.link_to_add :certification_levels, class: 'btn btn-default btn-icon glyphicons circle_plus' do
      %i
      = t('settings.edit_agency.new_course_for_agency')

    .heading-buttons
      .buttons.pull-right{:style => "margin: 0;"}
        %button.btn.btn-primary.btn-icon.glyphicons.ok_2{ type: 'submit' }
          %i
          = t('settings.emails.save')
